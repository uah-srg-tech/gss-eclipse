<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="es.uah.aut.srg.gss.xtext.ui.GenerateXMI"
            name="Generate XMI">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="es.uah.aut.srg.gss.xtext.ui.handlers.GenerateXML"
            commandId="es.uah.aut.srg.gss.xtext.ui.GenerateXMI">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="es.uah.aut.srg.gss.xtext.ui.GenerateXMI"
               id="es.uah.aut.srg.gss.xtext.ui.popup.GenerateXMI"
               mnemonic="X"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <or>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_iface">
                     </test>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_test_proc">
                     </test>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_charts">
                     </test>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_protocol_packets">
                     </test>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_config">
                     </test>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="gss_environment">
                     </test>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
